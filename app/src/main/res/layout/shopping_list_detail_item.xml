<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerDetail"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_row">


    <ImageView
        android:layout_width="@dimen/product_item_image_size"
        android:layout_height="@dimen/product_item_image_size"
        android:id="@+id/imgStock"
        android:src="@mipmap/ic_default_shop"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textBold"
        android:text="Large Text"
        android:id="@+id/productName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgStock"
        android:layout_toEndOf="@+id/imgStock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textNormal"
        android:text="Medium Text"
        android:id="@+id/units"
        android:layout_below="@+id/productName"
        android:layout_alignLeft="@+id/productName"
        android:layout_alignStart="@+id/productName" />



    <CheckBox
        android:id="@+id/chkItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-5dp"
        android:layout_alignRight="@+id/imgStock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <!--ImageView
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/ic_edit_black_24dp" />
-->



</RelativeLayout>